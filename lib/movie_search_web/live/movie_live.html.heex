            <div class="form-group">
              <label class="form-label">ğŸ¬ RÃ©alisateur</label>
              <input
                type="text"
                name="movie[director]"
                class="form-input"
                value={@editing_movie.director}
                required
              />
            </div>
            
            <div class="form-group">
              <label class="form-label">â­ Note</label>
              <input
                type="number"
