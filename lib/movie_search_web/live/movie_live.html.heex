                placeholder="Ex: 1982"
                min="1900"
                max="2030"
                required
              />
            </div>
            
            <div class="form-group">
              <label class="form-label">ğŸ­ Genre(s)</label>
              <input
                type="text"
                name="movie[genre]"
                class="form-input"
                placeholder="Ex: Sci-Fi, Thriller"
